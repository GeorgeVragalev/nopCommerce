@{
    Layout = null;
}

<div id="myModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Product overview</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="text" disabled="disabled" name="title" id="title" value=""/>
                <input type="text" disabled="disabled" name="sku" id="sku" value=""/>
                <input type="text" disabled="disabled" name="price" id="price" value=""/>

                <img id="image" src="" name="image" width="100" height="100">

                @* @Html.IdFor(m => m.Name)').val() *@
            </div>
        </div>
    </div>
</div>


<script>
     function viewContentById(id) {
        $.getJSON('/Admin/Product/ViewById/'+id, function (data){
           
           $(".modal-body #title").val( data.Name );
           $(".modal-body #sku").val( data.Sku );
           $(".modal-body #price").val( data.Price );
           $(".modal-body img").attr('src', data.PictureThumbnailUrl);
           $("#myModal").modal('show');
        });
    }      
</script>